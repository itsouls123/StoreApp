@page "/suppliers/details"
@inject StoreApp.Data.StoreDbContext DB
@using StoreApp.Data
@inject NavigationManager NavigationManager
@using Microsoft.EntityFrameworkCore

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h4>Supplier</h4>
    <hr />
    @if (supplier is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">SuppCode</dt>
            <dd class="col-sm-10">@supplier.SuppCode</dd>
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@supplier.Name</dd>
            <dt class="col-sm-2">RegNo</dt>
            <dd class="col-sm-10">@supplier.RegNo</dd>
            <dt class="col-sm-2">Address</dt>
            <dd class="col-sm-10">@supplier.Address</dd>
            <dt class="col-sm-2">ContactNo</dt>
            <dd class="col-sm-10">@supplier.ContactNo</dd>
            <dt class="col-sm-2">CreditLimit</dt>
            <dd class="col-sm-10">@supplier.CreditLimit</dd>
            <dt class="col-sm-2">Balance</dt>
            <dd class="col-sm-10">@supplier.Balance</dd>
            <dt class="col-sm-2">PaymentDueNext</dt>
            <dd class="col-sm-10">@supplier.PaymentDueNext</dd>
            <dt class="col-sm-2">PaymentSchedule</dt>
            <dd class="col-sm-10">@supplier.PaymentSchedule</dd>
            <dt class="col-sm-2">VatRegNo</dt>
            <dd class="col-sm-10">@supplier.VatRegNo</dd>
            <dt class="col-sm-2">BankName</dt>
            <dd class="col-sm-10">@supplier.BankName</dd>
            <dt class="col-sm-2">BankAccountNumber</dt>
            <dd class="col-sm-10">@supplier.BankAccountNumber</dd>
            <dt class="col-sm-2">SortCode</dt>
            <dd class="col-sm-10">@supplier.SortCode</dd>
        </dl>
        <div>
            <a href="@($"/suppliers/edit?suppid={supplier.SuppId}")">Edit</a> |
            <a href="@($"/suppliers")">Back to List</a>
        </div>
    }
</div>

@code {
    Supplier? supplier;

    [SupplyParameterFromQuery]
    public int SuppId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        supplier = await DB.Suppliers.FirstOrDefaultAsync(m => m.SuppId == SuppId);

        if (supplier is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
